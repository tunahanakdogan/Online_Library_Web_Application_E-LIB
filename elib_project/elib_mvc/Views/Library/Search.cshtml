@model BookListModel
@{
    Layout = "_Layout";
}
<div class="col-md-4">
    @await Component.InvokeAsync("Categories")
</div>
<div class="col-md-8">
    <div class="col">
        <div class="row">
            @foreach (var p in Model.books)
            {
                <div class="col-md-3">
                    @await Html.PartialAsync("_Books", p)
                </div>
            }
        </div>

    </div>
</div>