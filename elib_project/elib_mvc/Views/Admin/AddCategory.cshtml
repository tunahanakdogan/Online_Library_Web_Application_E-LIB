@{
    Layout = "_Layout2";
}
@model CategoryModel
<h2 class="text-center">Add Category</h2>
<hr>

<form asp-controller="admin" asp-action="addcategory" method="POST">
    <div class="form-group row">
        <label class="col-sm2 col-form-laber">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="name">
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="col-sm2 col-form-laber">Name Url</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="url">
            <span asp-validation-for="url" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>
</form>